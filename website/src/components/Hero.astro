---
import { CodeTabs, CodeTabItem } from "starlight-theme-nova/components";
---

<div class="hero">
  <div class="hero-content">
    <h1 class="hero-title">Your code under your control</h1>
    <p class="hero-tagline">
      CI-native metrics and quality gates. Zero dependencies.
    </p>
    <div class="sl-markdown-content init-code-tabs">
      <CodeTabs>
        <CodeTabItem
          label="npm"
          lang="bash"
          code={`npx unentropy init`}
        />
        <CodeTabItem
          label="bun"
          lang="bash"
          code={`bunx unentropy init`}
        />
      </CodeTabs>
    </div>
  </div>
</div>

<style>
  .hero {
    padding: 4rem 1rem 2rem;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: var(--sl-color-white);
  }

  .hero-tagline {
    font-size: clamp(1.1rem, 2.5vw, 1.35rem);
    color: var(--sl-color-gray-2);
    margin: 0 0 2rem;
    line-height: 1.5;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .init-code-tabs {
    max-width: 500px;
    text-align: center;
    margin: 0 auto;
  }
</style>
